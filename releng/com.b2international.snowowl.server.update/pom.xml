<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<artifactId>com.b2international.snowowl.server.update</artifactId>
	<packaging>eclipse-repository</packaging>

	<parent>
		<groupId>com.b2international.snowowl</groupId>
		<artifactId>releng-parent</artifactId>
		<version>7.0.0-SNAPSHOT</version>
	</parent>
	
	<properties>
		<packageFiles>${project.build.directory}/${project.build.finalName}/${project.build.finalName}</packageFiles>
	</properties>
	
	<dependencies>
		<dependency>
  			<groupId>org.apache.sshd</groupId>
  			<artifactId>sshd-core</artifactId>
  			<version>0.14.0</version>
		</dependency>
	</dependencies>

	<build>
		<finalName>snow-owl-oss-${build.version}</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.7</version>
				<executions>
					<execution>
						<id>prepare</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<target>
								<echo message="Unzipping Virgo archive..." />
								<unzip src="assembly/virgo-tomcat-server-3.7.2.RELEASE.zip"
									dest="target/" />
							</target>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-p2-director-plugin</artifactId>
				<executions>
					<execution>
						<id>materialize-products</id>
						<goals>
							<goal>materialize-products</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-p2-repository-plugin</artifactId>
				<configuration>
					<finalName>${project.build.finalName}-site</finalName>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.3</version>
				<executions>
					<execution>
						<id>package-oss</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<appendAssemblyId>false</appendAssemblyId>
							<workDirectory>${project.build.directory}/assembly/oss</workDirectory>
							<descriptor>${basedir}/assembly/oss.xml</descriptor>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>de.dentrassi.maven</groupId>
				<artifactId>rpm</artifactId>
				<version>1.1.0</version>
				<executions>
					<execution>
						<id>generate-rpm</id>
						<goals>
							<goal>rpm</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<targetDir>${project.build.directory}</targetDir>
					<attach>true</attach>
					<packageName>snow-owl-oss</packageName>
					<group>Application/Internet</group>
					<packager>B2i Healthcare</packager>
					<license>ASL 2.0</license>
					<architecture>x86_64</architecture>
					<skipSigning>true</skipSigning>
					<prefixes>
						<prefix>/usr</prefix>
					</prefixes>
					<rulesets>
						<ruleset>
							<id>data</id>
							<rules>
								<rule>
									<user>snowowl</user>
									<group>snowowl</group>
								</rule>
								<rule>
									<when>
										<type>file</type>
									</when>
									<noreplace>true</noreplace>
									<mode>0644</mode>
								</rule>
								<rule>
									<when>
										<type>directory</type>
									</when>
									<mode>0750</mode>
								</rule>
							</rules>
						</ruleset>
						<ruleset>
							<id>config</id>
							<rules>
								<rule>
									<user>snowowl</user>
									<group>snowowl</group>
									<when>
										<type>file</type>
									</when>
									<noreplace>true</noreplace>
									<mode>0660</mode>
									<configuration>true</configuration>
								</rule>
							</rules>
						</ruleset>
						<ruleset>
							<id>install</id>
							<rules>
								<rule>
									<user>snowowl</user>
									<group>snowowl</group>
								</rule>
								<rule>
									<when>
										<type>directory</type>
									</when>
									<mode>0755</mode>
								</rule>
								<rule>
									<when>
										<type>file</type>
									</when>
									<mode>0644</mode>
								</rule>
								<rule>
									<when>
										<prefix>/usr/share/snowowl/bin/</prefix>
										<type>file</type>
									</when>
									<mode>0755</mode>
								</rule>
							</rules>
						</ruleset>
					</rulesets>
					<entries>
						<entry>
							<name>/etc/snowowl</name>
							<ruleset>config</ruleset>
							<collect>
								<from>${packageFiles}/configuration</from>
							</collect>
						</entry>
						<entry>
							<name>/var/lib/snowowl</name>
							<ruleset>data</ruleset>
							<collect>
								<from>${packageFiles}/resources</from>
							</collect>
						</entry>
						<entry>
							<name>/usr/share/snowowl</name>
							<ruleset>install</ruleset>
							<collect>
								<from>${packageFiles}</from>
								<excludes>resources</excludes>
							</collect>
						</entry>
					</entries>
					<prerequisites>
						<prererequisite>shadow-utils</prererequisite>
					</prerequisites>
					<beforeInstallation>
						<file>${basedir}/packages/common/scripts/preinst</file>
					</beforeInstallation>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>