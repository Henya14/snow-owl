<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<artifactId>com.b2international.snowowl.server.update</artifactId>
	<packaging>eclipse-repository</packaging>

	<parent>
		<groupId>com.b2international.snowowl</groupId>
		<artifactId>releng-parent</artifactId>
		<version>7.0.0-SNAPSHOT</version>
	</parent>

	<build>
		<finalName>snowowl-${build.version}</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.7</version>
				<executions>
					<execution>
						<id>prepare</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<target>
								<echo message="Unzipping Virgo archive..." />
								<unzip src="assembly/virgo-tomcat-server-3.7.2.RELEASE.zip"
									dest="target/" />
							</target>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-p2-director-plugin</artifactId>
				<executions>
					<execution>
						<id>materialize-products</id>
						<goals>
							<goal>materialize-products</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.3</version>
				<executions>
					<execution>
						<id>package-dist</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<appendAssemblyId>false</appendAssemblyId>
							<workDirectory>${project.build.directory}/assembly/dist</workDirectory>
							<descriptor>${basedir}/assembly/dist.xml</descriptor>
							<outputDirectory>${project.build.directory}/dist</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>de.dentrassi.maven</groupId>
				<artifactId>rpm</artifactId>
				<version>1.1.0</version>
				<executions>
					<execution>
						<id>generate-rpm</id>
						<goals>
							<goal>rpm</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<targetDir>${project.build.directory}/dist</targetDir>
					<attach>true</attach>
					<group>Unspecified</group>
					<packageName>snowowl</packageName>
					<architecture>x86_64</architecture>
					<skipSigning>true</skipSigning>
					<rulesets>
						<ruleset>
							<id>rpm-default</id>
							<rules>
								<rule>
									<user>snowowl</user>
									<group>snowowl</group>
								</rule>
								<rule>
									<when>
										<prefix>/opt/snowowl/snowowl_config.yml</prefix>
										<type>file</type>
									</when>
									<when>
										<prefix>/opt/snowowl/configuration/</prefix>
										<type>file</type>
									</when>
									<configuration>true</configuration>
								</rule>
								<rule>
									<when>
										<type>directory</type>
									</when>
									<mode>0755</mode>
								</rule>
								<rule>
									<when>
										<type>file</type>
									</when>
									<mode>0644</mode>
								</rule>
								<rule>
									<when>
										<prefix>/opt/snowowl/bin/</prefix>
										<type>file</type>
									</when>
									<mode>0755</mode>
								</rule>
							</rules>
						</ruleset>
					</rulesets>
					<entries>
						<entry>
							<name>/opt/snowowl</name>
							<ruleset>rpm-default</ruleset>
							<collect>
								<from>${project.build.directory}/dist/${project.build.finalName}/${project.build.finalName}</from>
							</collect>
						</entry>
					</entries>
					<prerequisites>
						<prererequisite>shadow-utils</prererequisite>
					</prerequisites>
					<beforeInstallation>
						<script>
							getent group snowowl >/dev/null || groupadd -r snowowl
							getent passwd USERNAME >/dev/null || \
								useradd -r -g snowowl -d /opt/snowowl -s /sbin/nologin \
    							-c "Snow Owl Server" snowowl
    						exit 0
						</script>
					</beforeInstallation>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>